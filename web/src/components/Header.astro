---
import { getOturmaGruplari } from '../lib/api';

// Build time'da Strapi'den oturma gruplarını çek
let oturmaGruplari: { slug: string; menuLabel: string; title: string }[] = [];
try {
  oturmaGruplari = await getOturmaGruplari();
} catch (e) {
  console.warn('Strapi bağlantısı kurulamadı, menü boş olacak');
}
---

<header class="sticky top-0 z-50 bg-bg/95 backdrop-blur-sm border-b border-muted-3">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img 
          src="/logo/erol_logo_transparent.png" 
          alt="Erol Mobilya Logo" 
          class="h-14 w-auto transition-transform group-hover:scale-105"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="/" class="nav-link">Ana Sayfa</a>
        <a href="/hakkimizda" class="nav-link">Hakkımızda</a>
        <a href="/vizyon-misyon" class="nav-link">Vizyon & Misyon</a>
        
        <!-- Oturma Grupları Dropdown -->
        <div class="relative group">
          <button class="nav-link flex items-center gap-1">
            Oturma Grupları
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="bg-bg border border-muted-3 rounded-lg shadow-[0_8px_40px_rgba(10,9,8,0.12),0_4px_16px_rgba(10,9,8,0.06)] py-2 min-w-[200px]">
              <a href="/oturma-gruplari" class="block px-4 py-2 hover:bg-muted-3 transition-colors">
                Tümünü Gör
              </a>
              {oturmaGruplari.length > 0 && (
                <div class="border-t border-muted-3 my-2"></div>
              )}
              {oturmaGruplari.map((item) => (
                <a 
                  href={`/oturma-gruplari/${item.slug}`} 
                  class="block px-4 py-2 hover:bg-muted-3 transition-colors"
                >
                  {item.menuLabel || item.title}
                </a>
              ))}
            </div>
          </div>
        </div>
        
        <a href="/iletisim" class="px-5 py-2.5 bg-accent text-white font-medium rounded-lg hover:bg-accent-dark transition-colors shadow-[0_4px_20px_rgba(10,9,8,0.08),0_2px_8px_rgba(10,9,8,0.04)]">İletişim</a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-muted-3 transition-colors"
        aria-label="Menüyü aç"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2">
        <a href="/" class="px-4 py-3 rounded-lg hover:bg-muted-3 transition-colors font-medium">Ana Sayfa</a>
        <a href="/hakkimizda" class="px-4 py-3 rounded-lg hover:bg-muted-3 transition-colors font-medium">Hakkımızda</a>
        <a href="/vizyon-misyon" class="px-4 py-3 rounded-lg hover:bg-muted-3 transition-colors font-medium">Vizyon & Misyon</a>
        <a href="/oturma-gruplari" class="px-4 py-3 rounded-lg hover:bg-muted-3 transition-colors font-medium">Oturma Grupları</a>
        {oturmaGruplari.map((item) => (
          <a 
            href={`/oturma-gruplari/${item.slug}`} 
            class="px-4 py-3 pl-8 text-sm rounded-lg hover:bg-muted-3 transition-colors font-medium"
          >
            {item.menuLabel || item.title}
          </a>
        ))}
        <a href="/iletisim" class="px-4 py-3 mt-2 bg-accent text-white font-medium rounded-lg text-center hover:bg-accent-dark transition-colors">İletişim</a>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    position: relative;
    font-weight: 500;
    color: var(--color-fg-muted);
    padding: 0.5rem 0;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: var(--color-fg);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-accent);
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
