---
import { getOturmaGruplari } from "../lib/api";

// Build time'da Strapi'den oturma gruplarını çek
let oturmaGruplari: { slug: string; menuLabel: string; title: string }[] = [];
try {
  oturmaGruplari = await getOturmaGruplari();
} catch (e) {
  console.warn("Strapi bağlantısı kurulamadı, menü boş olacak");
}
---

<header
  class="fixed top-0 left-0 right-0 z-[100] bg-fg/88 backdrop-blur-sm border-b border-accent-dark/35 transition-colors duration-300"
>
  <nav class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-6">
    <div class="grid grid-cols-[1fr_auto_1fr] items-center lg:h-full h-16">
      <!-- Desktop Navigation (Left) -->
      <div class="hidden md:flex items-center gap-8 justify-start">
        <!-- Oturma Grupları Dropdown -->
        <div class="relative group">
          <button class="nav-link flex items-center gap-1 text-accent">
            Oturma Grupları
            <svg
              class="w-4 h-4 transition-transform group-hover:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div
            class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200"
          >
            <div
              class="bg-fg border border-accent-dark/35 rounded-lg shadow-[0_8px_40px_rgba(10,9,8,0.24),0_4px_16px_rgba(10,9,8,0.18)] py-2 min-w-[220px]"
            >
              <a
                href="/oturma-gruplari"
                class="block px-4 py-2 text-accent hover:bg-white/5 transition-colors"
              >
                Tümünü Gör
              </a>
              {
                oturmaGruplari.length > 0 && (
                  <div class="border-t border-accent-dark/25 my-2" />
                )
              }
              {
                oturmaGruplari.map((item) => (
                  <a
                    href={`/oturma-gruplari/${item.slug}`}
                    class="block px-4 py-2 text-accent hover:bg-white/5 transition-colors"
                  >
                    {item.menuLabel || item.title}
                  </a>
                ))
              }
            </div>
          </div>
        </div>

        <a href="/hakkimizda" class="nav-link text-accent">Hakkımızda</a>
        <a href="/vizyon-misyon" class="nav-link text-accent">Vizyon & Misyon</a
        >
      </div>

      <!-- Mobile Menu Button (Left on Mobile) -->
      <div class="flex md:hidden justify-start z-50">
        <button
          id="mobile-menu-btn"
          class="p-2 -ml-2 rounded-lg hover:bg-white/5 transition-colors group"
          aria-label="Menüyü aç"
          aria-expanded="false"
        >
          <div class="w-6 h-5 relative flex flex-col justify-center">
            <span
              class="w-full h-0.5 bg-accent rounded-full transition-all duration-300 absolute group-[.is-active]:rotate-45 group-[.is-active]:translate-y-0 translate-y-[-8px]"
            ></span>
            <span
              class="w-full h-0.5 bg-accent rounded-full transition-all duration-300 absolute opacity-100 group-[.is-active]:opacity-0"
            ></span>
            <span
              class="w-full h-0.5 bg-accent rounded-full transition-all duration-300 absolute group-[.is-active]:-rotate-45 group-[.is-active]:translate-y-0 translate-y-[8px]"
            ></span>
          </div>
        </button>
      </div>

      <!-- Logo (Center) -->
      <div class="flex justify-center -ml-4 md:ml-0 z-50">
        <a href="/" class="flex items-center gap-3 group">
          <!-- Taşma görsel olarak kalsın ama taşan kısım alttan tıklamayı "yakalamayın" -->
          <img
            src="/logo/erol_logo_transparent.png"
            alt="Eroll Mobilya Logo"
            class="h-14 md:h-16 w-auto origin-center scale-175 transition-transform group-hover:scale-185 pointer-events-none select-none"
          />
        </a>
      </div>

      <!-- Contact (Right) -->
      <div class="flex items-center justify-end z-40">
        <a
          href="/iletisim"
          class="inline-flex px-4 py-2 md:px-6 md:py-3 text-sm md:text-base bg-accent text-fg font-semibold rounded-lg hover:bg-accent-light transition-colors shadow-[0_4px_20px_rgba(10,9,8,0.18),0_2px_8px_rgba(10,9,8,0.12)]"
        >
          İletişim
        </a>
      </div>
    </div>
  </nav>
</header>

<!--
  Not: iOS Safari’de backdrop-filter/backdrop-blur olan bir parent içinde `position: fixed`
  bazen parent’a göre “kırpılıyor”. Bu yüzden overlay/drawer’ı header dışına taşıyoruz.
-->

<!-- Mobile Drawer Overlay -->
<div
  id="mobile-overlay"
  class="fixed top-16 left-0 right-0 bottom-0 bg-black/50 backdrop-blur-[2px] z-[90] opacity-0 invisible transition-all duration-300 md:hidden"
>
</div>

<!-- Mobile Navigation Drawer -->
<div
  id="mobile-drawer"
  class="fixed top-16 bottom-0 left-0 w-[85%] max-w-sm bg-fg z-[95] transform -translate-x-full transition-transform duration-300 ease-in-out md:hidden shadow-2xl flex flex-col pt-10 px-6 overflow-y-auto text-accent"
>
  <nav class="flex flex-col">
    <a
      href="/"
      class="px-4 py-3 rounded-lg hover:bg-white/5 transition-colors font-medium text-lg"
      >Ana Sayfa</a
    >
    <a
      href="/hakkimizda"
      class="px-4 py-3 rounded-lg hover:bg-white/5 transition-colors font-medium text-lg"
      >Hakkımızda</a
    >
    <a
      href="/vizyon-misyon"
      class="px-4 py-3 rounded-lg hover:bg-white/5 transition-colors font-medium text-lg"
      >Vizyon & Misyon</a
    >

    <div class="px-4 py-3 font-medium text-lg text-accent">Oturma Grupları</div>
    <div class="pl-4 flex flex-col gap-1 border-l-2 border-accent-dark/35 ml-4">
      <a
        href="/oturma-gruplari"
        class="px-4 py-2 rounded-lg hover:bg-white/5 transition-colors"
        >Tümünü Gör</a
      >
      {
        oturmaGruplari.map((item) => (
          <a
            href={`/oturma-gruplari/${item.slug}`}
            class="px-4 py-2 rounded-lg hover:bg-white/5 transition-colors"
          >
            {item.menuLabel || item.title}
          </a>
        ))
      }
    </div>
  </nav>

  <div class="mt-auto mb-8 space-y-4">
    <!-- Telefon ve WhatsApp Butonları -->
    <div class="flex flex-col gap-3 px-4">
