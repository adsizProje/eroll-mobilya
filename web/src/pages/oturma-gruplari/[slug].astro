---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllOturmaGrubuSlugs, getOturmaGrubuBySlug, getStrapiImageUrl, blocksToHtml } from '../../lib/api';
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/thumbs';
import 'swiper/css/effect-fade';
import 'photoswipe/dist/photoswipe.css';

export async function getStaticPaths() {
  const slugs = await getAllOturmaGrubuSlugs();
  
  return slugs.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const product = await getOturmaGrubuBySlug(slug!);

if (!product) {
  return Astro.redirect('/oturma-gruplari');
}

const richContent = product.bodyRich ? blocksToHtml(product.bodyRich) : '';

// Prepare images for gallery
const heroImage = product.heroImage ? getStrapiImageUrl(product.heroImage, 'large') : null;
const heroThumb = product.heroImage ? getStrapiImageUrl(product.heroImage, 'thumbnail') : null;
const heroFull = product.heroImage ? getStrapiImageUrl(product.heroImage, 'large') : null; // Assuming full size exists for zoom
// Using large as full if full not available for simplicity in demo
const heroZoom = product.heroImage ? getStrapiImageUrl(product.heroImage, 'large') : null;

// Combine all images
const allImages = [];
if (product.heroImage) {
    allImages.push({
        id: 'hero',
        src: getStrapiImageUrl(product.heroImage, 'large'),
        thumb: getStrapiImageUrl(product.heroImage, 'thumbnail'),
        w: product.heroImage.width || 1200,
        h: product.heroImage.height || 900,
        alt: product.title
    });
}
if (product.gallery) {
    product.gallery.forEach((img, idx) => {
        allImages.push({
            id: `gallery-${idx}`,
            src: getStrapiImageUrl(img, 'large'),
            thumb: getStrapiImageUrl(img, 'thumbnail'),
            w: img.width || 1200,
            h: img.height || 900,
            alt: `${product.title} - ${idx + 1}`
        });
    });
}
