---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllOturmaGrubuSlugs, getOturmaGrubuBySlug, getStrapiImageUrl, blocksToHtml } from '../../lib/api';

export async function getStaticPaths() {
  const slugs = await getAllOturmaGrubuSlugs();
  
  return slugs.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const product = await getOturmaGrubuBySlug(slug!);

if (!product) {
  return Astro.redirect('/oturma-gruplari');
}

const richContent = product.bodyRich ? blocksToHtml(product.bodyRich) : '';
---

<BaseLayout title={`${product.title} | Erol Mobilya & Koltuk`} description={product.summary || undefined}>
  <!-- Breadcrumb -->
  <nav class="bg-bg-alt py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center gap-2 text-sm">
        <li>
          <a href="/" class="text-fg-muted hover:text-accent transition-colors">
            Ana Sayfa
          </a>
        </li>
        <li class="text-fg-muted">/</li>
        <li>
          <a href="/oturma-gruplari" class="text-fg-muted hover:text-accent transition-colors">
            Oturma Grupları
          </a>
        </li>
        <li class="text-fg-muted">/</li>
        <li class="text-accent font-medium">{product.title}</li>
      </ol>
    </div>
  </nav>
  
  <!-- Product Detail -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Gallery -->
        <div class="space-y-4">
          <!-- Hero Image -->
          <div class="aspect-4/3 rounded-2xl overflow-hidden bg-muted-3">
            {product.heroImage ? (
              <img 
                src={getStrapiImageUrl(product.heroImage, 'large')} 
                alt={product.title}
                class="w-full h-full object-cover"
                id="main-image"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center text-fg-muted">
                <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            )}
          </div>
          
          <!-- Gallery Thumbnails -->
          {product.gallery && product.gallery.length > 0 && (
            <div class="grid grid-cols-4 gap-3">
              {product.heroImage && (
                <button 
                  class="gallery-thumb active aspect-square rounded-lg overflow-hidden bg-muted-3 border-2 border-accent"
                  data-src={getStrapiImageUrl(product.heroImage, 'large')}
                >
                  <img 
                    src={getStrapiImageUrl(product.heroImage, 'thumbnail')} 
                    alt={product.title}
                    class="w-full h-full object-cover"
                  />
                </button>
              )}
              {product.gallery.map((image, index) => (
                <button 
                  class="gallery-thumb aspect-square rounded-lg overflow-hidden bg-muted-3 border-2 border-transparent hover:border-accent transition-colors"
                  data-src={getStrapiImageUrl(image, 'large')}
                >
                  <img 
                    src={getStrapiImageUrl(image, 'thumbnail')} 
                    alt={`${product.title} - ${index + 1}`}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </button>
              ))}
            </div>
          )}
        </div>
        
        <!-- Product Info -->
        <div class="space-y-6">
          <h1 class="text-3xl md:text-4xl font-bold">{product.title}</h1>
          
          {product.summary && (
            <p class="text-lg text-fg-muted leading-relaxed">
              {product.summary}
            </p>
          )}
          
          <!-- Specs -->
          {(product.dimensions || product.materials) && (
            <div class="bg-bg-alt p-6 rounded-xl space-y-4">
              <h3 class="font-semibold text-lg">Ürün Özellikleri</h3>
              
              {product.dimensions && (
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
                  </svg>
                  <div>
                    <span class="text-sm text-fg-muted">Boyutlar</span>
                    <p class="font-medium">{product.dimensions}</p>
                  </div>
                </div>
              )}
              
              {product.materials && (
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                  </svg>
                  <div>
                    <span class="text-sm text-fg-muted">Malzemeler</span>
                    <p class="font-medium">{product.materials}</p>
                  </div>
                </div>
              )}
            </div>
          )}
          
          <!-- CTA -->
          <div class="flex flex-wrap gap-4 pt-4">
            <a 
              href={`https://wa.me/905327713224?text=${encodeURIComponent(`Merhaba, ${product.title} hakkında bilgi almak istiyorum.`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 min-w-[200px] px-6 py-4 bg-[#25D366] text-white font-semibold rounded-xl hover:bg-[#128C7E] transition-colors inline-flex items-center justify-center gap-2"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp ile Bilgi Al
            </a>
            <a 
              href="tel:+905327713224"
              class="px-6 py-4 border-2 border-fg font-semibold rounded-xl hover:bg-fg hover:text-bg transition-colors inline-flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Ara
            </a>
          </div>
        </div>
      </div>
      
      <!-- Rich Content -->
      {richContent && (
        <div class="mt-16">
          <h2 class="text-2xl font-bold mb-6">Ürün Detayları</h2>
          <div class="prose-content" set:html={richContent} />
        </div>
      )}
    </div>
  </section>
  
  <!-- Back Link -->
  <section class="py-8 border-t border-muted-3">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <a 
        href="/oturma-gruplari" 
        class="inline-flex items-center gap-2 text-fg-muted hover:text-accent transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Tüm Oturma Grupları
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .prose-content h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose-content p {
    color: var(--color-fg-muted);
    line-height: 1.75;
    margin-bottom: 1rem;
  }
  
  .prose-content ul, .prose-content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
  
  .prose-content li {
    margin-bottom: 0.5rem;
    color: var(--color-fg-muted);
  }
  
  .prose-content ul li {
    list-style-type: disc;
  }
  
  .prose-content ol li {
    list-style-type: decimal;
  }
  
  .prose-content blockquote {
    border-left: 4px solid var(--color-accent);
    padding-left: 1rem;
    font-style: italic;
    color: var(--color-fg-muted);
    margin: 1.5rem 0;
  }
  
  .prose-content img {
    border-radius: 0.75rem;
    margin: 1.5rem 0;
  }
  
  .prose-content figure {
    margin: 1.5rem 0;
  }
  
  .prose-content figcaption {
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-fg-muted);
    margin-top: 0.5rem;
  }
  
  .gallery-thumb.active {
    border-color: var(--color-accent);
  }
</style>

<script>
  // Gallery functionality
  const mainImage = document.getElementById('main-image') as HTMLImageElement;
  const thumbs = document.querySelectorAll('.gallery-thumb');
  
  thumbs.forEach((thumb) => {
    thumb.addEventListener('click', () => {
      const src = thumb.getAttribute('data-src');
      if (src && mainImage) {
        mainImage.src = src;
        
        // Update active state
        thumbs.forEach((t) => {
          t.classList.remove('active');
          (t as HTMLElement).style.borderColor = 'transparent';
        });
        thumb.classList.add('active');
        (thumb as HTMLElement).style.borderColor = 'var(--color-accent)';
      }
    });
  });
</script>
