---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getOturmaGruplari, getStrapiImageUrl } from '../../lib/api';

// Build time'da oturma gruplarını çek
const oturmaGruplari = await getOturmaGruplari();
---

<BaseLayout title="Oturma Grupları | Erol Mobilya & Koltuk">
  <!-- Hero -->
  <section class="py-20 bg-linear-to-bb from-bg-alt to-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Oturma Grupları</h1>
        <p class="text-xl text-fg-muted leading-relaxed">
          Yaşam alanlarınıza zarafet katan, kaliteli ve şık oturma gruplarımızı keşfedin.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Products Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {oturmaGruplari.length > 0 ? (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {oturmaGruplari.map((product, index) => (
            <a 
              href={`/oturma-gruplari/${product.slug}`}
              class="block p-4 bg-bg-alt rounded-2xl border border-muted-3 hover:border-accent hover:shadow-[0_8px_40px_rgba(10,9,8,0.12),0_4px_16px_rgba(10,9,8,0.06)] transition-all duration-300 group"
              data-animate="fade-up"
              data-delay={String((index % 3) * 100)}
            >
              <div class="aspect-4/3 rounded-xl overflow-hidden bg-muted-3 mb-4">
                {product.heroImage ? (
                  <img 
                    src={getStrapiImageUrl(product.heroImage, 'medium')} 
                    alt={product.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading={index < 6 ? 'eager' : 'lazy'}
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-fg-muted">
                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}
              </div>
              
              <h2 class="text-xl font-semibold group-hover:text-accent transition-colors mb-2">
                {product.title}
              </h2>
              
              {product.summary && (
                <p class="text-fg-muted line-clamp-2">
                  {product.summary}
                </p>
              )}
              
              <span class="inline-flex items-center gap-1 text-accent font-medium mt-4 group-hover:gap-2 transition-all">
                Detayları Gör
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-20">
          <svg class="w-24 h-24 mx-auto text-muted-2 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <h2 class="text-2xl font-bold mb-2">Henüz Ürün Eklenmemiş</h2>
          <p class="text-fg-muted">
            Oturma gruplarımız yakında burada listelenecek.
          </p>
        </div>
      )}
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-16 bg-bg-alt">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Özel Tasarım mı İstiyorsunuz?</h2>
      <p class="text-fg-muted mb-6">
        Hayalinizdeki oturma grubunu birlikte tasarlayalım. Özel siparişler için bizimle iletişime geçin.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/iletisim" class="px-6 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent-dark transition-colors">
          İletişime Geç
        </a>
        <a href="https://wa.me/905327713224" target="_blank" rel="noopener noreferrer" class="px-6 py-3 bg-[#25D366] text-white font-semibold rounded-lg hover:bg-[#128C7E] transition-colors inline-flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          WhatsApp
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Simple scroll animations
  const animatedElements = document.querySelectorAll('[data-animate]');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const el = entry.target as HTMLElement;
        const delay = el.dataset.delay || '0';
        
        setTimeout(() => {
          el.classList.add('animated');
        }, parseInt(delay));
        
        observer.unobserve(el);
      }
    });
  }, { threshold: 0.1 });
  
  animatedElements.forEach((el) => observer.observe(el));
</script>

<style is:global>
  [data-animate] {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  [data-animate].animated {
    opacity: 1;
    transform: translateY(0);
  }
</style>
