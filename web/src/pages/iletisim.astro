---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="İletişim | Eroll Mobilya & Koltuk">
  <!-- Hero -->
  <section class="lg:py-12 pt-10 pb-0 bg-linear-to-bb from-bg-alt to-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">İletişim</h1>
        <p class="text-xl text-fg-muted leading-relaxed">
          Sorularınız için bize ulaşın, size yardımcı olmaktan mutluluk duyarız.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info & Form -->
  <section class="py-16 max-md:pt-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-bold mb-6">İletişim Bilgileri</h2>

            <div class="space-y-6">
              <!-- Address -->
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 shrink-0 flex items-center justify-center bg-accent/10 rounded-xl"
                >
                  <svg
                    class="w-6 h-6 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Adres</h3>
                  <p class="text-fg-muted">
                    Karşıyaka Mahallesi<br />
                    3001. Sokak No:46<br />
                    Merkez/Elazığ 23050
                  </p>
                  <a
                    href="https://www.google.com/maps/place//data=!4m2!3m1!1s0x4076bfb55d4bc2b7:0xca8d0f70c179bfcc"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 text-sm text-accent hover:underline mt-2"
                  >
                    Haritada Görüntüle
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      ></path>
                    </svg>
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 shrink-0 flex items-center justify-center bg-accent/10 rounded-xl"
                >
                  <svg
                    class="w-6 h-6 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Telefon</h3>
                  <a
                    href="tel:+905301227623"
                    class="text-fg-muted hover:text-accent transition-colors"
                  >
                    0530 122 76 23
                  </a>
                </div>
              </div>

              <!-- WhatsApp -->
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 shrink-0 flex items-center justify-center bg-[#25D366]/10 rounded-xl"
                >
                  <svg
                    class="w-6 h-6 text-[#25D366]"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">WhatsApp</h3>
                  <a
                    href="https://wa.me/905301227623"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-fg-muted hover:text-[#25D366] transition-colors"
                  >
                    Mesaj Gönder
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div>
            <h3 class="font-semibold mb-4">Sosyal Medya</h3>
            <div class="flex gap-3">
              <a
                href="https://www.instagram.com/erollmobilya/"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 flex items-center justify-center bg-fg text-bg rounded-xl hover:bg-accent transition-colors"
                aria-label="Instagram"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://www.facebook.com/agahmob/"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 flex items-center justify-center bg-fg text-bg rounded-xl hover:bg-accent transition-colors"
                aria-label="Facebook"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-bg-alt p-8 rounded-2xl border border-muted-3">
          <h2 class="text-2xl font-bold mb-6">Mesaj Gönderin</h2>

          <form class="space-y-6" id="contact-form">
            <div>
              <label for="name" class="block text-sm font-medium mb-2"
                >Ad Soyad</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border border-muted-3 bg-bg focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-all"
                placeholder="Adınız Soyadınız"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium mb-2"
                >Telefon</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 rounded-lg border border-muted-3 bg-bg focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-all"
                placeholder="05XX XXX XX XX"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium mb-2"
                >E-posta (Opsiyonel)</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 rounded-lg border border-muted-3 bg-bg focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-all"
                placeholder="ornek@email.com"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium mb-2"
                >Mesajınız</label
              >
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 rounded-lg border border-muted-3 bg-bg focus:border-accent focus:ring-2 focus:ring-accent/20 outline-none transition-all resize-none"
                placeholder="Mesajınızı buraya yazın..."></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-6 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent-dark transition-colors"
            >
              Gönder
            </button>
          </form>

          <p class="text-sm text-fg-muted mt-4 text-center">
            veya doğrudan
            <a
              href="https://wa.me/905301227623"
              class="text-[#25D366] font-medium hover:underline">WhatsApp</a
            >
            üzerinden ulaşın
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Map -->
  <section class="py-16 bg-bg-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold mb-8 text-center">Konumumuz</h2>
      <div
        class="aspect-[16/9] md:aspect-[21/9] rounded-2xl overflow-hidden shadow-elegant-lg"
      >
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3114.5!2d39.2!3d38.68!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4076bfb55d4bc2b7%3A0xca8d0f70c179bfcc!2zS2FyxZ_EsXlha2EsIEVsYXrEscc!5e0!3m2!1str!2str!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Eroll Mobilya Konum"></iframe>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById("contact-form");

  form?.addEventListener("submit", (e) => {
    e.preventDefault();

    const formData = new FormData(form as HTMLFormElement);
    const name = formData.get("name");
    const phone = formData.get("phone");
    const message = formData.get("message");

    // WhatsApp mesajı oluştur
    const whatsappMessage = `Merhaba, ben ${name}.%0A%0ATelefon: ${phone}%0A%0A${message}`;
    const whatsappUrl = `https://wa.me/905301227623?text=${whatsappMessage}`;

    // WhatsApp'a yönlendir
    window.open(whatsappUrl, "_blank");
  });
</script>
