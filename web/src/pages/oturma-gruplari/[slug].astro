<script>
  import Swiper from 'swiper';
  import { Navigation, Thumbs, EffectFade, Keyboard } from 'swiper/modules';
  import PhotoSwipeLightbox from 'photoswipe/lightbox';

  function initGallery() {
    // Only init if gallery exists
    if (!document.querySelector('.product-gallery')) return;

    // Initialize Thumbs Swiper
    const thumbsSwiper = new Swiper('.thumbs-swiper', {
      modules: [Navigation, Thumbs],
      spaceBetween: 10,
      slidesPerView: 4,
      freeMode: true,
      watchSlidesProgress: true,
      centerInsufficientSlides: true,
      breakpoints: {
        640: {
            slidesPerView: 5,
        },
        1024: {
            slidesPerView: 6,
        }
      }
    });

    // Initialize Main Swiper
    const mainSwiper = new Swiper('.main-swiper', {
      modules: [Navigation, Thumbs, EffectFade, Keyboard],
      spaceBetween: 0,
      slidesPerView: 1,
      effect: 'fade',
      loop: true,
      fadeEffect: {
        crossFade: true
      },
      keyboard: {
        enabled: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      thumbs: {
        swiper: thumbsSwiper,
      },
      on: {
        slideChange: (swiper) => {
            // Update counter for mobile
            const current = swiper.realIndex + 1;
            const total = swiper.slides.length;
            const currentEl = document.querySelector('.current-slide');
            if (currentEl) currentEl.textContent = current.toString();
        }
      }
    });

    // Initialize PhotoSwipe
    const lightbox = new PhotoSwipeLightbox({
      gallery: '.main-swiper',
      children: '.swiper-slide:not(.swiper-slide-duplicate) > a', // Selector fix for looped Swiper
      pswpModule: () => import('photoswipe'),
      padding: { top: 20, bottom: 20, left: 20, right: 20 },
    });
    
    lightbox.init();
    
    lightbox.init();
  }

  // Run on initial load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initGallery);
  } else {
    initGallery();
  }
  
  // Also run on Astro page load
  document.addEventListener('astro:page-load', initGallery);
</script>
